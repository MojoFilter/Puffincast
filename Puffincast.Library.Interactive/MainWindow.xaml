<Window x:Class="Puffincast.Library.Interactive.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Puffincast.Library.Interactive"
        xmlns:v="clr-namespace:Puffincast.Library.Interactive.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel>
            <Button DockPanel.Dock="Bottom" Command="{Binding Scan}">Scan</Button>
            <v:ScanView ViewModel="{Binding}" />
        </DockPanel>
    </Grid>
</Window>
